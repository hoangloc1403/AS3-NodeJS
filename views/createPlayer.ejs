<div id="modal-js-example" class="modal">
  <div class="modal-background"></div>

  <div class="modal-content container-md max-w-xl">
    <div class="box">
      <div class="heading">
        <h1 class="text-xl font-bold text-love-dark">Create player</h1>
      </div>
      <div class="column">
        <form method="post" class="flex flex-col gap-10">
          <div>
            <label
              for="email"
              class="block text-sm font-medium text-gray-700 mb-2"
              >Name</label
            >
            <div class="mt-1">
              <input
                name="name"
                type="text"
                placeholder="e.g USA"
                required
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
              />
            </div>
          </div>
          <!-- ----- -->
          <div>
            <label class="text-base font-medium text-gray-900">Captain</label>

            <div
              class="space-y-4 mt-2 sm:flex sm:items-center sm:space-y-0 sm:space-x-10"
            >
              <div class="flex items-center">
                <input
                  id="email"
                  name="isCaptain"
                  type="radio"
                  value="true"
                  checked
                  class="h-4 w-4 border-gray-300 text-love focus:text-love"
                />
                <label
                  for="email"
                  class="ml-3 block text-sm font-medium text-gray-700"
                  >yes</label
                >
              </div>

              <div class="flex items-center">
                <input
                  id="sms"
                  name="isCaptain"
                  type="radio"
                  value="false"
                  class="h-4 w-4 border-gray-300 text-love focus:text-love"
                />
                <label
                  for="sms"
                  class="ml-3 block text-sm font-medium text-gray-700"
                  >No</label
                >
              </div>
            </div>
          </div>

          <div>
            <label for="club" class="block text-sm font-medium text-gray-700"
              >Club</label
            >
            <select
              name="club"
              class="mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
            >
              <% clubs.forEach(club => { %>
              <option value="<%= club.name %>"><%= club.name %></option>
              <% }) %>
            </select>
          </div>

          <div>
            <label
              for="position"
              class="block text-sm font-medium text-gray-700"
              >Position</label
            >
            <select
              name="position"
              class="mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
            >
              <% positions.forEach(position => { %>
              <option value="<%= position.name %>"><%= position.name %></option>
              <% }) %>
            </select>
          </div>

          <div>
            <label for="nation" class="block text-sm font-medium text-gray-700"
              >Nation</label
            >
            <select
              name="nation"
              class="mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
            >
              <% nations.forEach(nation => { %>
              <option value="<%= nation.id %>"><%= nation.name %></option>
              <% }) %>
            </select>
          </div>

          <div>
            <label
              for="career"
              class="block text-sm font-medium text-gray-700 mb-2"
              >Career</label
            >
            <div class="mt-1">
              <input
                name="career"
                type="text"
                placeholder="Career of player"
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
              />
            </div>
          </div>

          <div>
            <label
              for="email"
              class="block text-sm font-medium text-gray-700 mb-2"
              >Goals</label
            >
            <div class="mt-1">
              <input
                name="goals"
                type="number"
                placeholder="e.g. 100"
                required
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
              />
            </div>
          </div>

          <div>
            <label
              for="email"
              class="block text-sm font-medium text-gray-700 mb-2"
              >Image</label
            >
            <div class="mt-1">
              <input
                name="image"
                type="text"
                placeholder="URL of image"
                required
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
              />
            </div>
          </div>

          <div class="flex justify-end">
            <button
              type="submit"
              class="control inline-flex items-center rounded-md border border-transparent bg-love px-3 py-2 text-sm font-medium leading-4 text-slate-900 shadow-sm hover:bg-love focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
            >
              Create
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <button class="modal-close is-large" aria-label="close"></button>
</div>
