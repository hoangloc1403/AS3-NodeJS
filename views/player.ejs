<div class="flex flex-col">
  <div class="relative mt-5 group">
    <div
      class="w-full h-56 overflow-hidden bg-gray-200 rounded-md group-hover:opacity-75 lg:h-72 xl:h-80"
    >
      <img
        src="<%=player.image %>"
        alt="Hand stitched, orange leather long wallet."
        class="object-cover object-center w-full h-full"
      />
    </div>
    <h3 class="mt-4 text-xl text-gray-700">
      <a href="#">
        <span class="absolute inset-0"></span>
        <%=player.name %>
      </a>
    </h3>
    <div class="flex items-center gap-2">
      <label class="mt-1 text-sm font-bold">Club:</label>
      <p class="mt-1 text-sm text-gray-500"><%= player.club %></p>
    </div>
    <div class="flex items-center gap-2">
      <label class="mt-1 text-sm font-bold">Position:</label>
      <p class="mt-1 text-sm text-gray-500"><%= player.position %></p>
    </div>
    <div class="flex items-center gap-2">
      <label class="mt-1 text-sm font-bold">Goals:</label>
      <p class="mt-1 text-sm text-gray-500"><%= player.goals %></p>
    </div>
    <div class="flex items-center gap-2">
      <label class="mt-1 text-sm font-bold">Captain:</label>
      <p class="mt-1 text-sm text-gray-500">
        <%= player.isCaptain ? "yes" : "no" %>
      </p>
    </div>
    <div class="flex items-center gap-2">
      <label class="mt-1 text-sm font-bold">Nation:</label>
      <p class="mt-1 text-sm text-gray-500"><%= player.nation.name%></p>
    </div>
    <div class="flex items-center gap-2">
      <label class="mt-1 text-sm font-bold">Career:</label>
      <p class="mt-1 text-sm text-gray-500">
        <%= player.career ? player.career : "None"%>
      </p>
    </div>
  </div>
  <% if (isAuth == true && isAdmin === true) { %>
  <div class="flex gap-2 mt-4">
    <a
      href="/player/<%=player.id%>"
      class="items-center w-full px-3 py-2 text-sm font-medium leading-4 text-center  text-slate-900 bg-love border border-transparent rounded-md shadow-sm hover:bg-love focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
    >
      Edit
    </a>
    <a
      href="/delete/<%=player.id%>"
      class="items-center w-full px-3 py-2 text-sm font-medium leading-4 text-center text-love bg-white border-love rounded-md shadow-sm hover:text-love focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
      onclick="return confirm('Are you sure you want to delete?')"
    >
      Delete
    </a>
  </div>
  <% } %>
</div>
