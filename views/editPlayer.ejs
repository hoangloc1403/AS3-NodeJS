<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./import.ejs') %>
  <title>
    <%= title %>
  </title>
</head>

<body>
  <%- include('./header.ejs') %>

  <div class="flex flex-col justify-center min-h-full py-7 sm:px-6 lg:px-8 mb-5">
    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
      <div class="px-4 py-8 bg-white shadow sm:rounded-lg sm:px-10">
        <div class="heading">
          <h1 class="text-xl font-bold text-organe">Edit player</h1>
        </div>
        <form method="post" class="flex flex-col gap-10">
          <div class="max-w-xl">
            <label for="email" class="block mb-2 text-sm font-medium text-gray-700">Name</label>
            <div class="mt-1">
              <input name="name" type="text" value="<%=player.name%>" placeholder="e.g USA" required class="block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
            </div>
          </div>
          <!-- ----- -->
          <div class="max-w-xl">
            <label class="text-base font-medium text-gray-900">Captain</label>

            <div class="mt-2 space-y-4 sm:flex sm:items-center sm:space-y-0 sm:space-x-10">
              <div class="flex items-center">
                <% if (player.isCaptain == true) { %>
                <input id="email" name="isCaptain" type="radio" value="true" checked class="w-4 h-4 text-love border-love focus:ring-indigo-500" />
                <% } %>
                <% if (player.isCaptain == false) { %>
                <input id="email" name="isCaptain" type="radio" value="true" class="w-4 h-4 text-love border-love focus:ring-indigo-500" />
                <% } %>
                <label for="email" class="block ml-3 text-sm font-medium text-gray-700">yes</label>
              </div>

              <div class="flex items-center">
                <% if (player.isCaptain == true) { %>
                <input id="sms" name="isCaptain" type="radio" value="false" class="w-4 h-4 text-love border-love focus:ring-indigo-500" />
                <% } %>
                <% if (player.isCaptain == false) { %>
                <input id="sms" name="isCaptain" type="radio" value="false" checked class="w-4 h-4 text-love border-love focus:ring-indigo-500" />
                <% } %>
                <label for="sms" class="block ml-3 text-sm font-medium text-gray-700">No</label>
              </div>
            </div>
          </div>

          <div class="max-w-xl">
            <label for="club" class="block text-sm font-medium text-gray-700">Club</label>
            <select name="club" class="block w-full py-2 pl-3 pr-10 mt-1 text-base border-gray-300 rounded-md focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
              <% clubs.forEach(club => { %>
              <option value="<%= club.name %>" <%= JSON.stringify(club.name) === JSON.stringify(player.club) ? 'selected' : '' %>><%= club.name %></option> <% }) %>
            </select>
          </div>

          <div class="max-w-xl">
            <label for="position" class="block text-sm font-medium text-gray-700">Position</label>
            <select name="position" class="block w-full py-2 pl-3 pr-10 mt-1 text-base border-gray-300 rounded-md focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
              <% positions.forEach(position => { %>
              <option value="<%= position.name %>" <%= JSON.stringify(position.name) === JSON.stringify(player.position) ? 'selected' : '' %>><%=position.name %></option> <% }) %>
            </select>
          </div>

          <div class="max-w-xl">
            <label for="nation" class="block text-sm font-medium text-gray-700">Nation</label>
            <select name="nation" class="block w-full py-2 pl-3 pr-10 mt-1 text-base border-gray-300 rounded-md focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
              <% nations.forEach(nation => { %>
              <option value="<%= nation._id %>" <%= JSON.stringify(nation._id) === JSON.stringify(player.nation._id) ? 'selected' : '' %>><%=nation.name %></option> <% }) %>
            </select>
          </div>

          <div class="max-w-xl">
            <label for="career" class="block mb-2 text-sm font-medium text-gray-700" value=" <%=player.career %>">Career</label>
            <div class="mt-1">
              <input name="career" value="<%= player.career%>" type="text" placeholder="Career of player" class="block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
            </div>
          </div>

          <div class="max-w-xl">
            <label for="email" class="block mb-2 text-sm font-medium text-gray-700">Goals</label>
            <div class="mt-1">
              <input name="goals" type="number" value="<%= player.goals%>" placeholder="e.g. 100" required class="block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
            </div>
          </div>

          <div class="max-w-xl">
            <label for="email" class="block mb-2 text-sm font-medium text-gray-700" value=" <%=player.image %>">Image</label>
            <div class="mt-1">
              <input name="image" value="<%= player.image%>" type="text" placeholder="URL of image" required class="block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
            </div>
          </div>

          <div class="flex justify-end max-w-xl gap-7">
            <a href="/" class="inline-flex items-center px-3 py-2 text-sm font-medium leading-4 text-love bg-white border border-transparent rounded-md shadow-sm control hover:text-love focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
              Cancel
            </a>
            <button type="submit" class="inline-flex items-center px-3 py-2 text-sm font-medium leading-4 text-gray-700 bg-love border border-transparent rounded-md shadow-sm control hover:bg-love focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
              Update
            </button>

          </div>
        </form>
      </div>
    </div>
  </div>
  <%- include('./footer.ejs') %>
</body>

</html>